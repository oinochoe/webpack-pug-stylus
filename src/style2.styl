@charset "utf-8"
// 쓰고보니 뭔가 변태의 산물 같다.

*
    box-sizing:border-box

body
    display: flex
    justify-content: center
    align-items:center
    flex-direction: column
    min-height: 100vh
    background: #ddd
    color: #222

@media (prefers-color-scheme: dark)
    body {
        background: #222
        color: #ddd
    }

:root
    --line: #0fa

svg
    width: 200px
    height: 150px

path
    fill: none
    stroke-width: 5px
    stroke: var(--line)

.container
    position: relative

.block
    offset-path: path('M20,20 C20,100 200,0 200,100')
    offset-distance: calc(var(--distance, 50) * 1%)
    offset-rotate: calc(var(--rotate, auto) * 1deg)
    position: absolute
    top: 50%
    left: 50%
    width: 40px
    height: 40px
    margin-left: -110px
    margin-top: -62px
    border: 4px solid var(--line)
    background: #ec1920
