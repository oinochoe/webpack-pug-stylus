@charset "utf-8";
body
    min-height 100vh
    margin 0
    padding 0
    border 0

.slider
    display flex
    position relative
    width 100%
    min-height 100vh
    margin 0 auto
    cursor pointer
    text-align center
    overflow hidden
    .slider-inner
        position absolute
        &:after
            content ""
            display table
            clear both
        .slide
            float left
            box-sizing border-box
            background-size 100% auto
            background-attachment fixed
            background-position center center

            &.slide1
                background-image url('https://s1.pearlcdn.com/KR/Upload/BANNER/MAIN/8e5462fe90d20200304173744382.jpg')
            &.slide2
                background-image url('https://s1.pearlcdn.com/KR/Upload/BANNER/MAIN/8e5462fe90d20200304173744382.jpg')
            &.slide3
                background-image url('https://s1.pearlcdn.com/KR/Upload/BANNER/MAIN/8e5462fe90d20200304173744382.jpg')
            &.slide4
                background-image url('https://s1.pearlcdn.com/KR/Upload/BANNER/MAIN/8e5462fe90d20200304173744382.jpg')
            &.slide5
                background-image url('https://s1.pearlcdn.com/KR/Upload/BANNER/MAIN/8e5462fe90d20200304173744382.jpg')
            img
                display block
                width 100%
            span
                display block
                width 100vw
                height 100vh
                top 12vw
                font-size 10vw
                line-height 100vh
                letter-spacing 1vw
                -webkit-touch-callout none
                user-select none
                cursor default
a.arrow
    display block
    position absolute
    top 50%
    margin-top -20px
    width 40px
    height 40px
    border-bottom 6px solid #ffffff
    border-left 6px solid #ffffff

    &.arrow-left
        left 20px
        transform rotate(45deg)
        transition left 0.5s
        &:hover
            left 15px
    &.arrow-right
        right 20px
        border-left none
        border-right 6px solid #ffffff
        transform rotate(-45deg)
        transition right 0.5s
        &:hover
            right 15px

.dots-wrapper
    position absolute
    width 100px
    left 50%
    margin-left -50px
    bottom 20px
    text-align center
    li
        display inline-block
        width 12px
        height 12px
        background-color white
        border-radius 50%
        margin 0 4px
        opacity 0.5
        cursor pointer
        transition opacity 0.3s
        &.active,
        &:hover
            opacity:1
